{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "AirWin",
            "command": "cl.exe",
            "args": [
                //"/FS",//https://learn.microsoft.com/en-us/cpp/build/reference/fs-force-synchronous-pdb-writes?redirectedfrom=MSDN&view=msvc-170
                "/Zi",
                "/EHsc",
                "/std:c++20",
                "/nologo",
                "/I",
                "${workspaceFolder}/include",
                "/I",
                "${workspaceFolder}/lib",
                "/Fe:",
                "${workspaceFolder}/bin/",
                "/Fd:",
                "${workspaceFolder}/bin/",
                "/Fo:",
                "${workspaceFolder}/bin/",
                "${workspaceFolder}/src/*.cc",
                "${workspaceFolder}/src/*.c",
                "${workspaceFolder}/include/imgui/*.cpp",
                "/MD",
                "/link",
                "/LIBPATH:${workspaceFolder}/lib",
                "glfw3.lib",
                "opengl32.lib",
                "user32.lib",
                "gdi32.lib",
                "shell32.lib",
                "vcruntime.lib",
                "msvcrt.lib"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "AirWin"
        },
